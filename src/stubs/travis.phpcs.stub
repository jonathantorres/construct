language: php

git:
  depth: 2

matrix:
  include:
{phpVersions}
  fast_finish: true

cache:
  directories:
    - $HOME/.composer/cache
    - $HOME/.php-cs-fixer

before_script:
  - travis_retry composer self-update
  - travis_retry composer install --no-interaction

script:
  - if [[ $LINT = true ]]; then
      composer cs-lint;
    fi
  - composer test
